---
# yamllint configuration
# https://yamllint.readthedocs.io/en/stable/configuration.html

extends: default

ignore: |
  .git/
  .cache/
  .molecule/
  collections/
  molecule/

rules:
  # Line length - allow longer lines for Ansible
  line-length:
    max: 160
    level: warning

  # Truthy values - allow Ansible-style yes/no
  truthy:
    allowed-values: ['true', 'false', 'yes', 'no']
    check-keys: false

  # Comments - require space after #
  comments:
    require-starting-space: true
    min-spaces-from-content: 1

  # Indentation - 2 spaces
  indentation:
    spaces: 2
    indent-sequences: true
    check-multi-line-strings: false

  # Braces - allow single line
  braces:
    min-spaces-inside: 0
    max-spaces-inside: 1

  # Brackets - allow single line
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 1

  # Colons - standard spacing
  colons:
    max-spaces-before: 0
    max-spaces-after: 1

  # Commas - standard spacing
  commas:
    max-spaces-before: 0
    min-spaces-after: 1
    max-spaces-after: 1

  # Document markers
  document-start: disable
  document-end: disable

  # Empty lines
  empty-lines:
    max: 2
    max-start: 0
    max-end: 1

  # Hyphens
  hyphens:
    max-spaces-after: 1

  # Key duplicates
  key-duplicates: enable

  # New lines
  new-line-at-end-of-file: enable
  new-lines:
    type: unix

  # Octal values
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true

  # Comments indentation - required by ansible-lint
  comments-indentation: false

  # Quoted strings
  quoted-strings:
    quote-type: any
    required: false
