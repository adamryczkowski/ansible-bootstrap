# EditorConfig - https://editorconfig.org/

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# YAML files (Ansible)
[*.{yml,yaml}]
indent_size = 2

# Jinja2 templates
[*.j2]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# Python
[*.py]
indent_size = 4

# Makefiles and justfiles
[{Makefile,justfile}]
indent_style = tab

# Configuration files
[*.{cfg,ini,conf}]
indent_size = 2

# JSON
[*.json]
indent_size = 2
